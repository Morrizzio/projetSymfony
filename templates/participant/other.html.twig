{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} | {{ participant.pseudo }}{% endblock %}

{% block body %}
    <h1>{{ participant.pseudo }}</h1>

    {% if is_granted('ROLE_ADMIN') %}
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn">{{ button_label|default('Save') }}</button>
        {{ form_end(form) }}

        <!-- SUPPRIMER LE PROFIL -->
        <form method="post" action="{{ path('participant_delete', {'id': participant.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ participant.id) }}">
            <button class="btn">Delete</button>
        </form>

    {% else %}
        <div class="p-infos-show">
            <div>Prénom: {{ participant.prenom }}</div>
            <div>Nom: {{ participant.nom }}</div>
            <div>Téléphone: {{ participant.telephone }}</div>
            <div>Email: {{ participant.email }}</div>
            <div>Campus: {{ participant.campus.nom }}</div>
        </div>
    {% endif %}
{% endblock %}
