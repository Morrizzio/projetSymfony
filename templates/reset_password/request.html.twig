{% extends 'base.html.twig' %}

{% block title %}Retrouvez votre compte{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h1>Retrouvez votre compte</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Veuillez entrer votre adresse e-mail, et vous receverez un lien pour recuperer votre compte.
            </small>
        </div>

        <button class="btn btn-primary">Renvoyer</button>
    {{ form_end(requestForm) }}
{% endblock %}
